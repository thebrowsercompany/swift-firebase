module firebase [system] {
  requires cplusplus

  module app {
    header "FirebaseApp.hh"
    export *
    link "firebase_app"
  }

  module auth {
    header "FirebaseAuth.hh"
    export *
    link "firebase_auth"
  }

  module core {
    header "FirebaseCore.hh"
    export *
  }

  module logging {
    header "FirebaseLogging.hh"
    export *
  }

  module firestore {
    header "FirebaseFirestore.hh"
    export *
    link "firebase_firestore"
  }

  module functions {
    header "FirebaseFunctions.hh"
    export *
  }

  module storage {
    header "FirebaseStorage.hh"
    export *
  }
}
